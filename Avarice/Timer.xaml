<Window x:Class="Avarice.Timer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avarice"
        mc:Ignorable="d"
        Title="Timer" Width="640" Height="360">
    <StackPanel>
        <TextBox x:Name="strTimer" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" FontSize="72" TextAlignment="Center" MaxLines="1" TextOptions.TextFormattingMode="Display" MaxLength="8" PreviewTextInput="textBox_PreviewTextInput" Text="00:00:00"/>
        <Button x:Name="button" Content="Button" MouseDoubleClick="button_MouseDoubleClick"/>
    </StackPanel>
</Window>
